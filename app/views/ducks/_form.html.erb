<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @duck do |f| %>
<%= f.label "Name: " %>
<%= f.text_field :name %>
<br><br>
<%= f.label "Description: " %><br>
<%= f.text_area :description %>
<br><br>
<%= f.label "Owner: " %>
<%= f.collection_select(:student_id, Student.all, :id, :name) %>
<br><br>
<%= f.submit %>
<% end %>

